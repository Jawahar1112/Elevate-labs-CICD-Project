jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    - uses: actions/setup-node@v4
      with:
        node-version: '18'
    
    - name: Install dependencies
      run: npm ci
      working-directory: ./your-project-folder  # if needed
      
    - name: Run tests
      run: npm test -- --coverage --watchAll=false
      working-directory: ./your-project-folder  # if needed
